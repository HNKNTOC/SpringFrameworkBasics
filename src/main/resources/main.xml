<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="loggers.xml"/>

    <bean id="client" class="example.one.Client">
        <constructor-arg index="0" value="01"/>
        <constructor-arg index="1" value="Homer Simpson"/>
        <property name="greeting" value="Hello Homer S."/>
    </bean>

    <bean id="app" class="example.one.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="consoleLogger"/>
        <constructor-arg>
            <map>
                <entry key="INFO" value-ref="consoleLogger"/>
                <entry key="ERROR" value-ref="combinedLogger"/>
            </map>
        </constructor-arg>
    </bean>

</beans>